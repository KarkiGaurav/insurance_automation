# Environment Configuration
NODE_ENV=development
PORT=3000

# Browser Configuration
CHROME_EXECUTABLE_PATH=/Applications/Google Chrome.app/Contents/MacOS/Google Chrome
PUPPETEER_HEADLESS=new
PUPPETEER_TIMEOUT=60000

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Screenshot Configuration
SCREENSHOT_DIR=./temp/screenshots
KEEP_SCREENSHOTS_DAYS=7

# Database Configuration (for future use)
MONGODB_URI=mongodb://localhost:27017/insurance_automation
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Configuration
API_RATE_LIMIT=100
CORS_ORIGIN=*

# Security
JWT_SECRET=your-super-secret-jwt-key-here
API_KEY=your-api-key-here

# External APIs (for future vehicle data integration)
VEHICLE_API_KEY=
VEHICLE_API_URL=

# Insurance Form Configuration
INSURANCE_FORM_URL=
FORM_TIMEOUT=30000
MAX_RETRY_ATTEMPTS=3

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@yourcompany.com

# Monitoring & Analytics
ENABLE_ANALYTICS=false
ANALYTICS_API_KEY=
ERROR_REPORTING_API_KEY=